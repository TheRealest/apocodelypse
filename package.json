{
  "name": "real-simple-webapp",
  "version": "0.0.0",
  "author": "RÃ©al R. Provencher",
  "description": "A really simple webapp template",
  "dependencies": {
    "express": "^4.12.0",
    "nodemon": "^1.3.7"
  },
  "devDependencies": {
    "browserify": "^9.0.3",
    "browserify-shim": "^3.8.3",
    "napa": "^1.2.0",
    "watchify": "^2.4.0"
  },
  "napa": {
    "ionic": "driftyco/ionic"
  },
  "scripts": {
    "postinstall": "./node_modules/.bin/napa",
    "clean": "rm public/js/* && rm public/css/*",
    "build:js": "browserify -e ./js/app.js -o ./public/js/bundle.js",
    "watch:js": "watchify -e ./js/app.js -o ./public/js/bundle.js",
    "build:sass": "sass scss/app.scss public/css/app.css",
    "watch:sass": "sass --watch scss/app.scss:public/css/app.css",
    "build": "npm run build:js && npm run build:sass",
    "watch": "npm run watch:js & npm run watch:sass",
    "serve": "./node_modules/.bin/nodemon --watch public -e js,css server.js",
    "dev": "npm run serve & npm run watch"
  },
  "browser": {
    "ionic": "./node_modules/ionic/release/js/ionic.min.js",
    "angular": "./node_modules/ionic/release/js/angular/angular.min.js",
    "angular-animate": "./node_modules/ionic/release/js/angular/angular-animate.min.js",
    "angular-resource": "./node_modules/ionic/release/js/angular/angular-resource.min.js",
    "angular-sanitize": "./node_modules/ionic/release/js/angular/angular-sanitize.min.js",
    "angular-ui-router": "./node_modules/ionic/release/js/angular-ui/angular-ui-router.min.js",
    "ionic-angular": "./node_modules/ionic/release/js/angular.min.js"
  },
  "browerify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "ionic": "ionic",
    "angular": "angular",
    "angular-animate": {
      "depends": [
        "angular"
      ]
    },
    "angular-resource": {
      "depends": [
        "angular"
      ]
    },
    "angular-sanitize": {
      "depends": [
        "angular"
      ]
    },
    "angular-ui-router": {
      "depends": [
        "angular"
      ]
    },
    "ionic-angular": {
      "depends": [
        "ionic",
        "angular",
        "angular-animate",
        "angular-resource",
        "angular-sanitize",
        "angular-ui-router"
      ]
    }
  }
}
